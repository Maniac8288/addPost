@model IEnumerable<AddPost.Models.Post>
@using AddPost.Models;
@{
    ViewBag.Title = "Главная";
}


<div class="container">

            @foreach (var item in Model)
            {
                <div class="col-md-12 panel panel-info">
                    <div class="panel-heading">
                        <h1 class="panel-title" align="center">
                            @item.NamePost
                        </h1>
                    </div>
                
                    <div class="panel-heading">
                        <h3 class="panel-title" align="center">
                            
                              Категория: @item.selectedCategory
                        </h3>
                        </div>
                   
                        <div align="center">
                            @if(item.upload!=null){
                            <img src="~/img/@item.upload" alt="@item.NamePost" title="@item.NamePost" width="65%" class="img-thumbnail">}
                        </div>
                    <br />
                   <div class="contentPost">
                      
                           <div class="panel-body">
                               <p>

                                   @item.contentPost

                               </p>

                           </div>
                      
                    </div>
                    <p class="panel-body" align="center">
                        <a href="home/post/@item.PostID"  title="Полная сататья"> Читать  далее</a>
                    </p>
                    <div class="postFoter">
                        <div class="panel-footer" align="center">
                            <p>
                                @item.dateAddPost
                            </p>
                            <div class="help-block">
                               
                                   @foreach (string tag in item.CollectionTags)
                                   {
                                    <a class="btn btn-default btn-sm" href="@Url.Action("Tag","Home", new { tags = tag })">
                                        @tag
                                    </a>
                                   }

                            </div>
                        </div>
                        </div>
                    </div>
            }
   

   
</div>
