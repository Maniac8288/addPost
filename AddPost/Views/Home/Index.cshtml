@model IEnumerable<AddPost.Models.Post>
@{
    ViewBag.Title = "Главная";
}

<h3 align="center">Посты</h3>
<div class="row">
   
    <div class="col-xs-6 col-md-3" >
       
    </div>

    <div class="col-xs-12 col-sm-6 col-md-9">

        @foreach (var item in Model)
        {
            <div class="col-xs-6 col-sm-4.5" id="productContainer">

                <h2>
                    @Html.DisplayFor(modelItem => item.NamePost)
                </h2>
                <p>
                    @Html.DisplayFor(modelItem => item.selectedCategory)
                 
                </p>
               
                 <img src="~/img/@item.upload" alt="хех" class="img-thumbnail">
         
             
                <p>
                    @Html.DisplayFor(modelItem => item.contentPost)
                </p>
                <p>

                    @Html.DisplayFor(modelItem => item.dateAddPost)
                </p>
                <p>
                    @Html.DisplayFor(modelItem => item.Tags)
                </p>
               
              
            </div>
        }
    </div>

</div>
