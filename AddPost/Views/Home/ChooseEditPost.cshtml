@model IEnumerable<AddPost.Models.Post>
@{
    ViewBag.Title = "Редактировать пост";
}


<br />
<div class="container">
    @foreach (var item in Model)
    {
        <div class="blockPost text-center">
            <div class="panel panel-warning">
                <div class="panel-heading">
                    <h1 class="panel-title">@item.NamePost</h1>

                </div>
                <div class="panel-body">
                    <hr />
                    <h3>@item.selectedCategory</h3>
                    <hr />
                    <p>Дата создания: @item.dateAddPost</p>
                </div>
                <div class="panel-footer">
                    <a href="/home/EditPost/@item.PostID">
                        <button type="button" class="btn btn-warning">Редактировать</button>
                    </a>
                    <form method="post">
                        @Html.ActionLink("Удалить", "ChooseEditPost", new { id = item.PostID }, new { @class = "btn btn-danger" })
                   
                        <input type="submit" name="deletePost" value="Удалить @item.PostID" />
                    </form>
                </div>
            </div>
        </div>
    }
</div>

