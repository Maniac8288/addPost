@using PostModel.Models;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Мой первый блог</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <ul class="nav navbar-nav ">
                    <li>@Html.ActionLink("Главная страница", "Index", "Home")</li>
                    <li>@Html.ActionLink("Добавить пост", "AddPost", "Home")</li>
                    <li>@Html.ActionLink("Редактировать пост", "ChooseEditPost", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Категория<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            @foreach (var item in PostDataStorage.Category)
                            {
                                <li class="dropdown-submenu">
                                    <a> @item.Name</a>
                                    <ul class="dropdown-menu">
                                        @foreach (var element in item.Childrens)
                                        {
                                            <li><a href="@Url.Action("Category","Home", new { category = element.Name })">@element.Name</a></li> }
                                    </ul>
                                </li>
                            }

                        </ul>
                    </li>
                </ul>

            </div>
            @Html.Partial("_LoginPartial")



        </div>
    </div>
 
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
